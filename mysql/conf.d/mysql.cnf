[mysqld]
# ============================================================================
# CONFIGURAÇÕES DE SEGURANÇA TLS/SSL
# ============================================================================
# TLS 1.2 é configurado automaticamente via entrypoint-wrapper.sh
# Este script aplica: SET GLOBAL tls_version = 'TLSv1.2'
# Isso desabilita automaticamente TLS 1.0 e TLS 1.1
#
# A configuração é aplicada sempre que MySQL inicia, garantindo que
# apenas TLS 1.2 seja usado, mitigando vulnerabilidades de protocolos obsoletos
# e protegendo contra renegociação SSL/TLS maliciosa.

# ============================================================================
# PROTEÇÃO CONTRA RENEGOCIAÇÃO SSL/TLS
# ============================================================================
# Ao restringir para TLS 1.2 APENAS:
# - TLS 1.0 e TLS 1.1 são DESABILITADOS (vulneráveis a renegociação)
# - TLS 1.2 tem proteções nativas contra renegociação maliciosa (RFC 5746)
# - Risco de DoS por renegociação é MITIGADO

# ============================================================================
# CONFIGURAÇÕES EXISTENTES
# ============================================================================
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

